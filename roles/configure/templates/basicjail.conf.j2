classic {
  # STARTUP/LOGGING
  exec.start = "/bin/sh /etc/rc";
  exec.stop = "/bin/sh /etc/rc.shutdown";
  exec.consolelog = "/var/log/jail_console_${name}.log";

  # PERMISSIONS
  allow.raw_sockets;
  exec.clean;
  mount.devfs;

  # HOSTNAME/PATH
  host.hostname = "${name}";
  path = "{{jails_jail_mountpoint}}containers/${name}";

  # NETWORK
  # manually modify until I implement more config options
  #ip4.addr = entry.addr;
  #ip4.addr = 192.168.1.151;
  interface = {{jails_interface}};
}
